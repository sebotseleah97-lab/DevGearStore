@page
@model ProductsModel

<h2>Our Devices</h2>

<div class="auto-slider">
    <div class="slider-track" id="productSlider">
        @foreach (var product in Model.Products)
        {
            <div class="product">
                <img src="@product.Image" />
                <h3>@product.Name</h3>
                <p>@product.Category</p>
                <p>R @product.Price</p>
                <a class="btn" href="#">Buy Now</a>
            </div>
        }
    </div>
</div>

<script src="~/js/autoSlider.js"></script>
